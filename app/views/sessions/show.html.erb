<%= form_tag("/tweet", method: "get") do %>
	<%= text_area_tag 'tweet', @tweet_string %>
	<%= submit_tag("Tweet your results") %>
<% end %>

<table>
<tr>
<th>Username</th>
<th>Favorited</th>
<th>Profile picture</th>
<th>Sample tweet</th>
</tr>


<% @counts.each do |username, count| %>
	<tr>
		<td> <%= username %> </td>
		<td> <%= count %> </td>
		<td> <%= image_tag @users[username].profile_image_uri %> </td>
		<td width="500px"> <%= @tweets[username].html_safe %> </td>
	</tr>
<% end %>

</table>