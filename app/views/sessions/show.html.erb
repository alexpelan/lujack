<div class="container">

	<%= form_tag("/tweet", method: "get", class: "form-inline") do %>
		<%= text_field_tag "tweet", @tweet_string %>
		<button type="submit" class="btn btn-primary">Tweet your results</button>
	<% end %>
	
	<table class="table table-hover"></table>
	 
	<div class="results">
		<ul class="favorite_user_list">
			<% @counts.each_with_index do |(username, count), index| %>
				<li class="favorite_user_list">
					<% if index<10  %>
						<div class="embedded_tweet">
							<% if @tweet_htmls[username] %>
								<%= @tweet_htmls[username].html_safe  %>
							<% end %> 
						</div>
						<div class="user_details">
					 		<h3 class="favorite_user_list"> <%= index+1 %>. @<%= username %> </h3>
					 		<p>Favorited <%= count %>x
					 	</div>
					
					<% else %>
						<p> <strong> <%= index+1 %>. @<%= username %></strong> - Favorited <%= count %>x </p>
					<% end %>
				</li>
			
			<% end %>
		</ul>
	</div>
	
	<table></table>

</div>